<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.LoginController">
   <children>
      <AnchorPane id="AnchorPane" layoutX="10.0" layoutY="10.0" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label fx:id="LoginLabel" alignment="CENTER" layoutX="84.0" layoutY="14.0" prefHeight="103.0" prefWidth="451.0" text="Login" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="45.0" />
               </font>
            </Label>
            <Label fx:id="UsernameLabel" layoutX="23.0" layoutY="104.0" prefHeight="103.0" prefWidth="268.0" text="Username:" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="PasswordLabel" layoutX="23.0" layoutY="207.0" prefHeight="103.0" prefWidth="268.0" text="Password:" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="Username" layoutX="309.0" layoutY="135.0" prefHeight="41.0" prefWidth="268.0" />
            <TextField fx:id="Password" layoutX="309.0" layoutY="238.0" prefHeight="41.0" prefWidth="268.0" />
            <Button fx:id="Submit" alignment="CENTER" layoutX="182.0" layoutY="338.0" mnemonicParsing="false" onAction="#SubmitBtn" prefHeight="41.0" prefWidth="237.0" text="Submit" textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Label fx:id="UsernameErrorLabel" layoutX="213.0" layoutY="176.0" prefHeight="41.0" prefWidth="364.0" text="No username given!" textAlignment="CENTER" textFill="RED" visible="false">
               <font>
                  <Font name="System Italic" size="13.0" />
               </font>
            </Label>
            <Label fx:id="PasswordErrorLabel" layoutX="213.0" layoutY="279.0" prefHeight="41.0" prefWidth="364.0" text="No password given!" textAlignment="CENTER" textFill="RED" visible="false">
               <font>
                  <Font name="System Italic" size="13.0" />
               </font>
            </Label>
            <Label fx:id="InputErrorLabel" layoutX="213.0" layoutY="279.0" prefHeight="41.0" prefWidth="364.0" text="Username and password must be the same!" textAlignment="CENTER" textFill="RED" visible="false">
               <font>
                  <Font name="System Italic" size="13.0" />
               </font>
            </Label>
            <Label fx:id="InputErrorLabel1" layoutX="223.0" layoutY="289.0" prefHeight="41.0" prefWidth="364.0" text="Incorrect Username/Password" textAlignment="CENTER" textFill="RED" visible="false">
               <font>
                  <Font name="System Italic" size="13.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
